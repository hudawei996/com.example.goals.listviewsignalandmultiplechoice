<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="com.example.goals.listviewsignalandmultiplechoice.activity.FrameLayoutActivity">    <RelativeLayout        android:id="@+id/activity_mine_unit_card_new"        android:layout_width="wrap_content"        android:layout_height="wrap_content">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_above="@+id/llButtons"            android:layout_alignParentTop="true"            android:orientation="vertical">            <!--framLayout用法要特别注意，两层东西会导致上边一层不能显示-->            <!--<FrameLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">-->            <android.support.v4.widget.SwipeRefreshLayout                android:id="@+id/refresh"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <!--空视图-->                <RelativeLayout                    android:id="@+id/rlEmptyView"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:background="@color/colorAccent"                    android:padding="@dimen/activity_horizontal_margin">                    <LinearLayout                        android:id="@+id/llBundlUnitCardInEmptyView"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:gravity="center"                        android:onClick="bundlUnitCard"                        android:orientation="vertical"                        android:padding="@dimen/activity_horizontal_margin">                        <ImageView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="@dimen/activity_horizontal_margin"                            android:src="@mipmap/pay_button_add" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginBottom="@dimen/activity_horizontal_margin"                            android:layout_marginTop="8dp"                            android:text="绑定一卡通"                            android:textColor="@color/T1" />                    </LinearLayout>                    <Button                        android:id="@+id/btnQueryOldUnitCardInEmptyView"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_alignParentBottom="true"                        android:background="@color/transparent"                        android:onClick="gotoOldUnitCard"                        android:text="查询旧的一卡通"                        android:textColor="@color/T1"                        android:textSize="14sp" />                </RelativeLayout>                <!--内容视图-->                <ListView                    android:id="@+id/lvMyUnitCards"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:dividerHeight="20dp"                    android:padding="@dimen/activity_horizontal_margin"                    android:visibility="gone" />            </android.support.v4.widget.SwipeRefreshLayout>            <!--</FrameLayout>-->        </LinearLayout>        <!--****************************************************************************************-->        <!--底部添加按钮-->        <LinearLayout            android:id="@+id/llButtons"            android:layout_width="0dp"            android:layout_height="48dp"            android:layout_alignParentBottom="true"            android:background="@color/colorAccent"            android:orientation="horizontal"            tools:layout_editor_absoluteX="8dp"            tools:layout_editor_absoluteY="0dp">            <TextView                android:layout_width="0dp"                android:layout_height="48dp"                android:layout_weight="1"                android:gravity="center"                android:text="添加银行卡"                android:textColor="@color/T1"                android:textSize="@dimen/big_content_16sp"                android:textStyle="bold" />        </LinearLayout>    </RelativeLayout></android.support.constraint.ConstraintLayout>